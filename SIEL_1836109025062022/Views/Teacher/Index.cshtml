@using SIEL_1836109025062022.Models.Teacher
@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Profesores";
}


       
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="row match-height">
                    <div class="col-md-12 col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title d-inline">Profesores</h4>
                                <a class="btn btn-secondary float-end" data-toggle="tooltip" data-placement="top" title="Imprimir" asp-controller="Classes" asp-action="PrintStudentsList" asp-route-id="7"><i class="bi bi-printer-fill"></i></a>                                
                            </div>

                            <div col-md-6 col-sm-12>
                                <div class="card-body">
                                    <table class="table" id="table1">
                                        <thead>
                                            <tr>
                                                <th>Nombre(s)</th>
                                                <th>Apelido(s)</th>
                                                <th>Telefono</th>
                                                <th>Correo</th>
                                                <th>Correo I.</th>
                                                <th>Grupos</th>
                                                <th>Alumnos</th>
                                                <th>Acciones</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <label>@item.user_name</label>
                                                    </td>
                                                    <td>
                                                        <label>@item.user_surname</label>
                                                    </td>
                                                    <td>
                                                        <label>@item.user_phone_1</label>
                                                    </td>
                                                    <td>
                                                    <label>@item.user_normalized_email_i</label>
                                                    </td>
                                                    <td>
                                                    <label>@item.user_institution_email</label>
                                                    </td>
                                                    <td>
                                                    <label>8</label>
                                                    </td>
                                                    <td>
                                                    <label>126</label>
                                                    </td>
                                                    <td>
                                                    <a class="btn btn-info btn-sm" data-toggle="tooltip" data-placement="top" title="Ver detalle"><i class="bi bi-eye"></i></a>
                                                    <a class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Ver grupos asignados"><i class="bi bi-people-fill"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
               @section Scripts{
                                <partial name = "_ValidationScriptsPartial"/>
                                <script>$(document).ready(function(){$('[data-toggle="tooltip"]').tooltip();});</script>
               }
        </section> 