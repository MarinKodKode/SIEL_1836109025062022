@using SIEL_1836109025062022.Models.Teacher
@model Teacher
@{
    ViewData["Title"] = "Profesores";
}

   <div class="page-heading">
            <h3>Alta de Docentes</h3>
   </div>
        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-12 order-md-1 order-last">
                        <p class="text-subtitle text-muted">Registro de docentes. Los campos marcados con asterisco (*)
                            son obligatorios.</p>
                    </div>
                </div>
            </div>
            <section id="multiple-column-form">
                <div class="row match-height">
                    <!--------------------------------------Inicia Card Datos del Docente -------------------------------------->
                    <section id="basic-vertical-layouts">
                        <div class="row match-height">
                            <div class="col-md-9 col-12">
                                <div class="card sombra">
                                    <div class="card-content">
                                        <div class="card-body">
                                            <form class="form form-vertical" asp-action="CreateTeacher" asp-controller="Teacher">
                                                <div class="form-body">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="first-name-vertical">Nombre(s) *</label>
                                                                <input type="text" class="form-control" asp-for="user_name">
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="contact-info-vertical">Correo Electrónico
                                                                    Personal *</label>
                                                                <input asp-for="user_personal_email" type="email"  class="form-control">
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="email-id-vertical">Apellidos *</label>
                                                                <input asp-for="user_surname" type="text" class="form-control">
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="password-vertical">Correo Electrónico Institucional *</label>
                                                                <input asp-for="user_institution_email" type="email" class="form-control">
                                                            </div>
                                                        </div>
                                                         <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="password-vertical">Teléfono 1 *</label>
                                                                <input asp-for="user_phone_1" type="text"  class="form-control">
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <label for="password-vertical">Teléfono 2 </label>
                                                                <input asp-for="user_phone_2" type="text" class="form-control">
                                                            </div>
                                                        </div>

                                                        <div class="col-6">
                                                            <div class="form-group">
                                                                <button type="submit" class=" btn btn-primary">Dar de alta docente</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>
            </section>
        </div>