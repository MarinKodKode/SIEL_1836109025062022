@model AnnouncementCreationViewModel
@{
    ViewData["Title"] = "Crear convocatoria"; ;
}
<!-- Basic Horizontal form layout section start -->
<section id="basic-horizontal-layouts">
    <div class="row match-height justify-content-center">
        <div class="col-md-8 col-lg-8 col-sm-12">
            <div class="card sombra">
                <div class="card-header">
                    <h4 class="card-title">Editar @Model.announcement_name</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <form class="form form-horizontal" asp-controller="Announcement" asp-action="EditAnnouncement" enctype="multipart/form-data" method="post">
                            <div class="form-body">
                                <div class="row">
                                    <input type="hidden" asp-for="id_announcement" value="@Model.id_announcement" name="@Model.id_announcement" />
                                    <div class="col-md-4">
                                        <label class="form-label" asp-for="announcement_name">Titulo  de Convocatoria</label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input type="text" asp-for="announcement_name" class="form-control"
                                               placeholder="Titulo de la convocatoria">
                                        <span asp-validation-for="announcement_name" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="announcement_description">Descripción</label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <textarea type="text" class="form-control" asp-for="announcement_description"
                                                  placeholder="Descripción"></textarea>
                                        <span asp-validation-for="announcement_description" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="start_date">Fecha de inicio</label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input type="datetime-local" id="start_date" name="start_date" class="form-control" asp-for="start_date" />
                                        <span asp-validation-for="start_date" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="end_date">Fecha de cierre</label>
                                    </div>
                                    <div class="col-md-8 form-group">
                                        <input type="datetime-local" id="end_date" name="end_date" class="form-control" asp-for="end_date" />
                                        <span asp-validation-for="end_date" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="notes">Información adicional</label>
                                    </div>
                                    <div class="col-lg-8 col-md-8 col-sm-8 form-group">
                                        <textarea asp-for="notes" type="text" name="notes"
                                                  class="form-control" required></textarea>
                                    </div>

                                    <div class="col-sm-12 d-flex justify-content-end">
                                        <button type="submit" class="sombra-1 btn btn-primary me-1" title="Guardar" data-bs-toggle="msg">
                                            Guardar</button>

                                        <a class="btn btn-danger sombra-1" asp-action="index" title="Cancelar" data-bs-toggle="msg">Cancelar</a>
                                    </div>


                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4 col-sm-12">
            <div class="card sombra">
                <div class="card-header">
                    <h4 class="card-title">Editar imagen</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <div class="card-img">
                            <img src="@Model.announcement_picture" class="col-md-12" />
                        </div>
                        <div class="card-footer">
                            <button type="button" class="btn btn-primary float-end rounded-pill" data-bs-toggle="modal"
                                    data-bs-target="#change-photo" >
                                Editar foto
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
    </section>
    <!-- // Basic Horizontal form layout section end -->
    <!-- // Basic Horizontal form layout section end -->
    <!--Default size Modal -->
    <div class="modal fade text-left" id="change-photo" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel18" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
         role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel18">Cambiar foto de convocatoria</h4>
                    <button type="button" class="close" data-bs-dismiss="modal"
                        aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Levels" asp-action="UpdateLevelPicture" enctype="multipart/form-data" method="post">
                        <input type="hidden" asp-for="id_announcement" readonly />
                        <div class="col-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="card-body">
                                        <p class="card-text">
                                            Sube tu nueva imagen para la convocatoria @Model.announcement_name
                                        </p>
                                        <input class="form-control" asp-for="announcement_picture" required accept="image/png, image/jpeg" type="file" value="upload">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-light-secondary"
                                data-bs-dismiss="modal">
                                <i class="bx bx-x d-block d-sm-none"></i>
                                <span class="d-none d-sm-block">Cerrar</span>
                            </button>
                            <button type="submit" class="btn btn-primary ml-1">
                                Actualizar
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="msg"]'))
        var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
