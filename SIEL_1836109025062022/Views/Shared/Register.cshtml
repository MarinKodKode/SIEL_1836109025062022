    <div class="container">
      <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
          <div class="card z-index-0">
            <div class="card-header text-center pt-4">
              <h3>Registro</h3>
              <h6>Porfavor, ingrese los datos requeridos.</h6>
            </div>
            <div class="card-body">
              <form asp-action="Register" asp-controller="User">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                  <input  asp-for="user_name"  type="text" class="form-control" placeholder="Nombre(s)" aria-label="Nombre(s)">
                  <span asp-validation-for="user_name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                  <input  asp-for="user_surname" type="text" class="form-control" placeholder="Apellidos" aria-label="Apellidos">
                  <span asp-validation-for="user_surname" class="text-danger"></span>  
                </div>
                <div class="mb-3">
                  <input  asp-for="user_personal_email" type="email" class="form-control" placeholder="Correo electronico personal" aria-label="Correo electronico personal">
                  <span asp-validation-for="user_personal_email" class="text-danger"></span>   
                </div>
                <div class="mb-3">
                  <input  asp-for="user_phone_1" type="number" class="form-control" placeholder="Teléfono" aria-label="Correo electronico Institucional">
                  <span asp-validation-for="user_phone_1" class="text-danger"></span>
                </div>
                <div class="mb-3">
                  <input  asp-for="user_hash_password" type="password" class="form-control" placeholder="Contraseña" aria-label="Contraseña">
                  <span asp-validation-for="user_hash_password" class="text-danger"></span>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Registrarse</button>
                </div>
                <p class="text-sm mt-3 mb-0">Ya tienes una cuenta? <a href="javascript:;" class="text-dark font-weight-bolder">Inicia sesión</a></p>
              </form>
              @section Scripts{
                  <partial name="_ValidationScriptsPartial"/>
              }
            </div>
          </div>
        </div>
      </div>
    </div>
