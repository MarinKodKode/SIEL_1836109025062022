@model InscriptionViewModel
@{
    ViewData["Title"] = "Incripción al Programa de Egresados";
    var isStudentJoined = ViewBag.status; 
}

@if(!isStudentJoined){
 <div class="page-heading">
            <h3>Inscripción al Programa de Inglés para Egresados</h3>
    </div>

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-12 order-md-1 order-last">
                    <p class="text-subtitle text-muted">
                        Si eres un estudiantes Egresado o Próximo a Egresar y deseas tomar tus cursos 
                        de inglés en está modalidad deberás haber realizado el pago correspondiente para
                        poder ingresar a dicho curso. El horario dispuesto podrá variar de segun los acuerdos
                        e indicaciones del profesor asignado.

                    </p>
                </div>
            </div>
        </div>
    </div>
    <section id="multiple-column-form">

            <div class="row match-height">
                <div class="col-md-7 col-sm-12">
                    <div class="card sombra">
                        <div class="card-header">
                            <h4 class="card-title">Selección de Horario y Modalidad</h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                    
                                <form class="form" asp-action="GraduatedProgramInscription" asp-controller="Student" enctype="multipart/form-data" method="post">
                                    <input type="hidden" readonly value="@Model.insc_id_student" asp-for="insc_id_student"/>

                                    <div class="row">
                                        <div class="col-sm-11 mb-1">
                                            <div class="input-group input-group-sm mb-3">
                                                <div class="col-lg-3 col-3">
                                                    <label class="col-form-label">Modalidad</label>
                                                </div>
                                                <div class="col-md-9 form-group">
                                                    <select class="form-select" asp-for="insc_id_modality" required>
                                                        @foreach (var item in Model.Modalities)
                                                        {
                                                            <option value="@item.id_modality">@item.modality_name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="input-group input-group-sm mb-3">
                                                <div class="col-lg-3 col-3">
                                                    <label class="col-form-label">Horario</label>
                                                </div>
                                                <div class="col-md-9 form-group">
                                                    <select class="form-select" asp-for="insc_id_schedule" required>
                                                        @foreach (var item in Model.Schedules)
                                                        {
                                                            <option value="@item.id_schedule">@item.schedule_name - @item.schedule_description</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="input-group input-group-sm mb-3">
                                                <div class="col-lg-3 col-3">
                                                    <label class="col-form-label">Número de control</label>
                                                </div>
                                                <div class="col-md-9 form-group">
                                                    <input asp-for="control_number" type="number" required class="form-control" placeholder="Número de control">
                                                </div>
                                            </div>
                                            <div class="input-group input-group-sm mb-3">
                                                <div class="col-12">
                                                    <label class="col-form-label">Comprobante de pago English Discoveries</label>
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="file_one" class="form-control" accept="application/pdf"  type="file" value="upload" required>
                                                </div>
                                            </div>
                                            <div class="input-group input-group-sm mb-3">
                                                <div class="col-12">
                                                    <label  class="col-form-label">Comprobante de pago Tecnológico </label>
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="file_two" class="form-control" accept="application/pdf"  type="file" value="upload" required>
                                                </div>
                                            </div>
                                            <div class="col-md-12 col-sm-12 col-lg-12 text-end">
                                                <button type="submit" class="btn btn-outline-success">
                                                    Inscribirme al Programa de Egresados
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 col-md-6 col-sm-12 sombra">
                    <div class="card">
                        <div class="card-content">
                            <center>
                                <div class="card-body">

                                    <h5 class="card-title">Datos del Curso Próximo a Inscripción</h5><br>

                                    <div class="badges">
                                        <h5><span class="badge bg-success">Nivel: Programa de Egresados</span></h5>
                                    </div><br>
                                    <div class="badges">
                                        <h5><span class="badge bg-warning">Programa: Programa de Inglés para Egresados</span></h5>
                                    </div><br>
                                    <div class="badges">
                                        <h5><span class="badge bg-info">Inicio de Clases:</span>
                                        </h5>
                                    </div>
                                    <div class="badges">
                                        <h5><span class="badge bg-info">12 de Septiembre de 2022</span>
                                        </h5>
                                    </div>

                                </div>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    }
else
{
  <partial name = "_StudentIsAlreadyJoined"/>  
}
